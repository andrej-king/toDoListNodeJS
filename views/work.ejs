<%- include("header.ejs") %>
    <div class="box">
        <% for(var i = 0; i < toDoItems.length; i++) { %>
            <div class="item">
                <input type="checkbox" id="item-<%= i %>">
                <p>
                    <label for="item-<%= i %>"><%= toDoItems[i].description %></label>
                </p>
            </div>
        <% } %>
        <form action="/work" class="class" method="POST">
            <input type="text" name="newTask" placeholder="New Work Task" autocomplete="off" autofocus>
            <button type="submit">+</button>
        </form>
    </div>

<%- include("footer.ejs") %>